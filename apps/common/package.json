{
  "name": "@wizard-battle/common",
  "version": "0.1.0",
  "description": "Shared utilities, constants, and types for Wizard Battle game",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./constants": {
      "import": "./dist/constants.js",
      "require": "./dist/constants.js",
      "types": "./dist/constants.d.ts"
    },
    "./wizards": {
      "import": "./dist/wizards.js",
      "require": "./dist/wizards.js",
      "types": "./dist/wizards.d.ts"
    },
    "./spells": {
      "import": "./dist/spells.js",
      "require": "./dist/spells.js",
      "types": "./dist/spells.d.ts"
    },
    "./effects": {
      "import": "./dist/effects.js",
      "require": "./dist/effects.js",
      "types": "./dist/effects.d.ts"
    },
    "./stater": {
      "import": "./dist/stater.js",
      "require": "./dist/stater.js",
      "types": "./dist/stater.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "5.8.2"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZkNoid/wizard-battle.git",
    "directory": "apps/common"
  },
  "keywords": [
    "wizard-battle",
    "game",
    "utilities",
    "shared"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "o1js": "^2.7.0",
    "phaser": "^3.90.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ]
  }
}
